@model IEnumerable<ToDoListV99.Models.List>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ListName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ListName)
            </td>
            <td>

                @Html.ActionLink("Edit", "Edit", new { id = item.ListId }) |
                @Html.ActionLink("View Items", "ViewItems", new { id = item.ListId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ListId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ListId })
            </td>
        </tr>
    }

</table>
